{
	"name": "Trelássio",
	"version": "4.0.0",
	"private": true,
	"description": "",
	"author": "Tássio Freire",
	"main": "index.js",
	"scripts": {
		"build": "npm run prod",
		"dev": "npm-run-all -p dev:*",
		"dev:vue2": "cd resources/js-vue-2 && npx mix",
		"dev:vue3": "cd resources/js-vue-3 && npx mix",
		"hot": "npm-run-all -p hot:*",
		"hot:vue2": "cd resources/js-vue-2 && npx mix watch --hot -- --port 5174",
		"hot:vue3": "cd resources/js-vue-3 && npx mix watch --hot -- --port 5173",
		"prod": "npm-run-all -s prod:* && json-concat public/mix-manifest-vue2.json public/mix-manifest-vue3.json public/mix-manifest.json",
		"prod:vue2": "cd resources/js-vue-2 && npx mix --production",
		"prod:vue3": "cd resources/js-vue-3 && npx mix --production"
	},
	"dependencies": {
		"json-concat": "^0.0.1"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5"
	},
	"directories": {
		"test": "tests"
	}
}