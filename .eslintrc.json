{
	"parserOptions": {
		"parser": "babel-eslint",
		"ecmaVersion": 2015,
		"sourceType": "module"
	},
    "extends": [
			"eslint:recommended",
			"plugin:vue/recommended",
			"airbnb-base"
		],

    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".vue"
                ]
            }
        }
    },

    "rules": {
        "vue/html-indent": ["error", "tab"],
        "indent": ["error", "tab"],
        "semi": ["error", "always"],
        "eol-last": ["error", "always"],
        "no-tabs": "off",
        "no-param-reassign": "off",
        "camelcase": "off",
        "no-else-return": "error"
    },

    "globals": {
        "localStorage": true,
        "d3": true,
        "_": true,
        "moment": true,
        "axios": true,
        "swal": true
    }
}
